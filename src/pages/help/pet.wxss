/* pages/help/detail.wxss */
@import "/common/lib/weui.wxss";
@import "/pages/card/card.wxss";

.user-head {
    margin-top: 0;
}

.user-head .weui-cell .footer_content {
    display: flex;
    align-items: center;
    color: #555;
    justify-content: center;
}

.footer_content image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
    vertical-align: middle;
    margin-top: -4rpx;
}

.user-head .weui-cell__bd {
    margin-top: 4rpx;
}

.user-head .weui-cell__bd .name {
    font-size: 34rpx;
}

.user-head::before {
    display: none;
}

.user-head::after {
    display: none;
}

.user-head .weui-cell__hd image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    margin-right: 20rpx;
    display: block;
}

.user-head .weui-cell__bd .desc {
    color: #888;
    font-size: 30rpx;
}

.user-head .weui-cell__ft {
    font-size: 30rpx;
}

.location:active {
    opacity: 0.8;
}

.lost-info {
    background-color: #fff;
}

.lost-info .lost-img {
    width: 100%;
    height: 100%;
}

.lost-info .img-warp {
    padding: 0 30rpx;
    height: 300rpx;
    padding-bottom: 0;
}

.lost-content {
    margin-top: 0;
    padding-bottom: 20rpx;
    font-size: 28rpx;
}

.lost-content::before, .lost-content::after {
    display: none;
}

.lost-content .weui-cell::before {
    display: none;
}

.lost-content .weui-cell__bd .title {
    color: #999;
    padding-bottom: 6rpx;
}

.lost-content .weui-cell__hd image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.lost-content .weui-cell {
    align-items: flex-start;
    padding: 30rpx 30rpx 0;
}

.lost-content .content.location {
    color: #5d7195;
}

.lost-content .content.content-info {
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    font-size: 30rpx;
}

.lost-content .content.content-info image {
    width: 28rpx;
    height: 28rpx;
    padding: 0 20rpx;
    vertical-align: middle;
    margin-top: -1rpx;
}

.aid-enter image {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin-right: 20rpx;
}

.aid-enter::before, .aid-enter::after {
    display: none;
}

.aid-enter {
    margin: 12rpx 0;
}

.aid-enter .weui-cell {
    padding: 28rpx 30rpx;
}

.bottom-content {
    background-color: #fff;
    margin-bottom: 130rpx;
}

.switch_tab {
    display: flex;
    width: 100%;
    position: relative;
}

.switch_tab .btn {
    color: #999;
}

.switch_tab .btn::after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 2rpx;
    border-bottom: 2rpx solid #dbdbdb;
    color: #dbdbdb;
}

.switch_tab .btn.active {
    color: #333;
}

.switch_tab .btn.active::after {
    border-bottom: 4rpx solid #f5494f;
    color: #f5494f;
}

.switch_warp .desc {
    padding: 30rpx;
}

.clue_container .weui-cells {
    margin: 0;
}

.clue_container .weui-cells::after, .clue_container .weui-cells::before {
    display: none;
}

.clue_container .weui-cell {
    align-items: flex-start;
}

.clue_container .weui-cell__hd .clue_photo {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    margin-right: 30rpx;
    margin-top: 5rpx;
}

.clue_container .theme-warp {
    position: relative;
    padding-bottom: 20rpx;
}

.clue_container .clue-reply::before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1rpx;
    border-top: 1rpx solid #dbdbdb;
    color: #dbdbdb;
}

.clue_container .theme-warp .location {
    color: #53688e;
    padding-top: 20rpx;
    font-size: 29rpx;
}

.clue_container .theme-warp .location image {
    width: 30rpx;
    height: 30rpx;
    padding-right: 10rpx;
    vertical-align: middle;
    margin-top: -8rpx;
}

.clue_container .screen-list {
    box-sizing: border-box;
    position: relative;
    height: 188rpx;
}

.clue_container .screen-list .img-box {
    width: 30%;
    height: 168rpx;
    border-radius: 6rpx;
    /* background-repeat: no-repeat;
    background-size: cover;
    background-position: center; */
    margin: 0 3% 10px 0;
    float: left;
}

.clue_container .clue-user {
    width: 100%;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    color: #888;
    padding-top: 10rpx;
    padding-bottom: 20rpx;
    font-size: 30rpx;
}

.clue_container .weui-cell::before {
    left: 30rpx;
    border-top: 1rpx solid #dbdbdb;
    color: #dbdbdb;
}

.clue-reply {
    font-size: 30rpx;
    color: #586d92;
    padding-top: 15rpx;
    position: relative;
}

.clue-reply .name {
    color: #586d92;
}

.clue-reply .type {
    color: #b9b9b9;
    padding: 0 6rpx;
}

.clue-reply .msg {
    color: #242424;
}

.clue-reply .reply-list {
    padding: 8rpx 0;
}

/*banner  */

.swiper {
    height: 300rpx;
    width: 100%;
    background-color:#F1F1F1;
}

.swiper image {
    height: 100%;
    width: 100%;
}

.reply-empty {
    width: 300rpx;
    height: 300rpx;
    margin: 0 auto;
    display: block;
    padding: 40rpx 0 30rpx;
}

.lost-content .content.location, .switch_warp .desc, .theme-warp .classname,
.clue-reply .msg {
    word-break: break-all;
    overflow: hidden;
    white-space: pre-wrap;
    word-wrap: break-word;
}

.card {
    color: #333;
    align-items: flex-start;
}

.card-bg {
    height: 300rpx;
    /* box-shadow: 0 1px 2rpx 0 #fff9f9;
    background-color: #fff9f9; */
    align-items: flex-start;
}

.card__hd image {
    width: 150rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin-left: 0;
}

.user-info {
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: flex-start;
    margin-top: 30rpx;
}

.username {
    font-size: 30rpx;
    font-weight: bold;
    vertical-align: middle;
}

.username image {
    width: 34rpx;
    height: 34rpx;
    padding: 0 10rpx;
    vertical-align: middle;
    margin-top: -1rpx;
    display: inline-block;
}

.variety {
    color: rgb(248, 73, 76);
    border: 1rpx solid rgb(248, 73, 76);
    display: inline-block;
    font-size: 20rpx;
    border-radius: 4rpx;
    padding: 0 6rpx;
}

.age {
    padding-left: 0;
    color: #666;
    font-size: 26rpx;
    padding-top: 5rpx;
}

.switch_warp .pet-title {
    color: #999;
    min-width: 150rpx;
}

.award {
    font-size: 28rpx;
    color: #acabab;
    padding: 6rpx;
    background-color: #eee;
    margin: 10rpx 30rpx 0;
}

.award text {
    color: #f8494c;
}
.award image{
   width: 46rpx;
   height: 46rpx;
   vertical-align: middle;
   padding: 0 8rpx
}
