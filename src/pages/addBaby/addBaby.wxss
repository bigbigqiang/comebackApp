page{
  background-color: #f3f5f5;
  padding-top: 5px;
}
.page{
  background-color: #fff;
}
.avatar{
  height: 50px;
  background-color: #fff;
  position: relative;
  margin-left: 10px;
}
.avatar-photo{
  height: 40px;
  width: 40px;
  border-radius: 50%;
  position: absolute;
  right: 25px;
  top: 5px;
  background-color: #f1f1f1;
}
.left-info{
  height: 50px;
  width: 25%;
  float: left;
  line-height: 50px;
}
.arrow{
  height: 16px;
  width: 16px;
  position: absolute;
  right: 5px;
  top: 50%;
  margin-top: -8px;
}
.delete{
  height: 20px;
  width: 20px;
  position: absolute;
  right: 10px;
  top: 50%;
  margin-top: -8px;
}
.info-list{
  height: 50px;
  border-top: 1px solid #f3f5f5;
  margin-left:10px;
  background-color: #fff;
  position: relative;
}
.info-name{
  height: 100%;
  width: 75%;
  position: absolute;
  right: 0;
  top: 0;
}
.name-placeholder{
  color: #ccc;
  font-size: 26rpx;
  text-align: right;
}
.picker{
  height: 100%;
  width: 75%;
  float: left;
}

.contact{
  height: 65px;
  background-color: #fff;
  position: relative;
  margin-left: 10px;
}
.prompt{
  position: absolute;
