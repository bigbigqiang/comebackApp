  float:left;
  position:relative;
}
.warn-img image{
  display: block;
  height: 20px;
  width: 20px;
  margin-left:20px;
  margin-top:3px;
}
.warnInfo text{
  width:87%;
  float:left;
  font-size:26rpx;
  color:#ccc;

}
