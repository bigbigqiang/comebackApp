page {
  background-color: #fff;
  border-top: 1px solid #ddd;
}

.logo {
  height: 100px;
  width: 100px;
  display: block;
  margin: 50px auto;
}

.form {
  height: 120px;
  width: 100%;
  position: relative;
}

.form image {
  display: block;
  height: 20px;
  width: 20px;
  margin: 15px auto;
}

.form-list {
  border-bottom: 1px solid #ddd;
  height: 50px;
  width: 100%;
  position: relative;
}

.icon {
  width: 20%;
  height: 50px;
  float: left;
}

.form-list input {
  width: 70%;
  height: 50px;
  line-height: 50px;
  float: left;
}

.visible {
  width: 10%;
  height: 50px;
  float: left;
}

.regist {
  color: #fb6c6e;
  position: absolute;
  left: 20px;
  bottom: -20px;
}

.forget {
  color: #fb6c6e;
  position: absolute;
  right: 20px;
  bottom: -20px;
}

.confirm {
  background-color: #f9494c;
  margin: 60px auto 10px;
  width: 85%;
  border-radius: 30px;
  height: 50px;
  text-align: center;
  color: #fff;
  border: none;
  line-height: 50px;
}

.button-disable {
  background-color: #ddd;
  color: #aaa;
}

.Vcode {
  width: 55% !important;
}

.get-code {
  width: 25%;
  height: 50px;
  float: left;
  line-height: 50px;
  text-align: center;
}

