.code-text {
  color: #ff3147;
}

.count-down {
  color: #888;
  border: 1px solid #888;
  padding: 0 15px;
  border-radius: 20px;
}

.terms {
  padding-left: 10%;
}

.terms text {
  font-size: 26rpx;
}
